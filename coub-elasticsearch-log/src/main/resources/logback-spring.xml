<?xml version="1.0" encoding="UTF-8"?>
<configuration debug="false" scan="true" scanPeriod="1 seconds">
    
    <define name="INSTANCE_CODE" class="com.louis.log.logback.InstanceCodePropertyDefiner"/>
    <property name="LOG_HOME" value="/web/logs/app/coub-elasticsearch-log/coub-elasticsearch-log/${INSTANCE_CODE}" />

    <contextName>logback</contextName>
    <substitutionProperty name="max.size" value="200MB" />

    <appender name="console" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%date{yyyy-MM-dd HH:mm:ss.SSS}|%-5level|[%thread]|%logger{56}.%method\(\):%L - %msg%n</pattern>
        </encoder>
    </appender>

    <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_HOME}/backhome-apply-service.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <FileNamePattern>${LOG_HOME}/mock.%d{yyyy-MM-dd}.log</FileNamePattern>
            <MaxHistory>15</MaxHistory>
        </rollingPolicy>
        <encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder" charset="UTF-8">
            <pattern>[%-5p] %d{yyyy-MM-dd HH:mm:ss.SSS} [%t] [%C] [%X{tid}] - %m%n</pattern>
            <charset>UTF-8</charset>
        </encoder>
    </appender>

    <appender name="ampLog" class="com.louis.coub.escustomer.collect.LogCollector">
        <proCode>${log.projectCode}</proCode>
        <appCode>${log.appCode}</appCode>
        <secretKey>${log.secretKey}</secretKey>
        <serverAddres>${log.serverAddress}</serverAddres>
    </appender>

    <root level="${log.level}">
        <appender-ref ref="console"/>
        <appender-ref ref="FILE"/>
        <appender-ref ref="ampLog"/>
    </root>


</configuration>